#include<iostream>
#include<cstdlib>
#include<ctime>

using namespace std;

int main()
{
	const int MIN_VALUE = 1; // const lowest number
	const int MAX_VALUE = 20; // const  highest number
	
	int number; // to hold the number program generated
	int guess; // to hold user's guesses
	int count = 0; // to count user's attempts

	// random number generator
	srand(time(0)); 
	
	number = (rand() % MAX_VALUE - MIN_VALUE + 1) + MIN_VALUE;
	
	cout << "I'm thinking of a number between 1 and 20.\n"
		 << "Try to guess it..." << endl;
	
	// loop for user's guesses
	do 
	{
		cin >> guess;
		count++;
		
		if (guess < number)
		{
		cout << "Too low. Try again." << endl;
		}
		else if (guess > number)
		{
		cout << "Too high. Try again" << endl;
	    }
	    
	    
	}
	while (number!=guess);
	
	cout << "Good job, you guessed the number on " 
		 << count << " attempt.";
	
	
	return 0;
}
